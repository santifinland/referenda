{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Referenda",
        "description": "**Spanish Pleno del Congreso de los Diputados unnoficial API**\n"
    },
    "host": "localhost:3443",
    "basePath": "/api",
    "schemes": [
        "https"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/parties": {
            "get": {
                "description": "Returns all parties with deputies in the Congress",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "List all parties",
                        "schema": {
                            "title": "Party",
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Party"
                            }
                        }
                    }
                }
            },
            "post": {
                "parameters": [
                    {
                        "name": "x-access-token",
                        "in": "header",
                        "description": "The access token needed for creating a new party",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "party",
                        "in": "body",
                        "description": "The party JSON to be created",
                        "schema": {
                            "$ref": "#/definitions/Party"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Create a new party",
                        "schema": {
                            "$ref": "#/definitions/Party"
                        }
                    }
                }
            }
        },
        "/parties/{partyId}": {
            "get": {
                "parameters": [
                    {
                        "name": "partyId",
                        "in": "path",
                        "type": "string",
                        "description": "ID of the party",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sends the party with partyId",
                        "schema": {
                            "$ref": "#/definitions/Party"
                        }
                    }
                }
            },
            "put": {
                "parameters": [
                    {
                        "name": "x-access-token",
                        "in": "header",
                        "description": "The access token needed for updating a party",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "partyId",
                        "in": "path",
                        "type": "string",
                        "description": "ID of the party to be updated",
                        "required": true
                    },
                    {
                        "name": "party",
                        "in": "body",
                        "description": "The party JSON to be updated",
                        "schema": {
                            "$ref": "#/definitions/Party"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sends the updated party with partyId",
                        "schema": {
                            "$ref": "#/definitions/Party"
                        }
                    }
                }
            },
            "delete": {
                "parameters": [
                    {
                        "name": "x-access-token",
                        "in": "header",
                        "description": "The access token needed for deleting a party",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "partyId",
                        "in": "path",
                        "type": "string",
                        "description": "ID of the party to be deleted",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "party successfuly deleted"
                    }
                }
            }
        }
    },
    "definitions": {
        "Party": {
            "type": "object",
            "properties": {
                "_id": {
                    "type": "string"
                },
                "name": {
                    "description": "Name of the party",
                    "type": "string"
                },
                "logo": {
                    "description": "URL of the partys logo",
                    "type": "string"
                },
                "quota": {
                    "description": "Partys quota in the Congress",
                    "type": "integer",
                    "format": "int32"
                }
            }
        }
    }
}